# Suspension of instance {{ instancename }}

server {
    listen 80;
    server_name {{ domains|join(' ') }};
    root    /var/www/html/;

    location / {
        return 503;
    }

    error_page 503 @suspension;
    location @suspension {
        rewrite ^(.*)$ /suspended.html break;
    }
}